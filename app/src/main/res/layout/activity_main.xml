<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1a1a2e">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ™ï¸ Live Transcription"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Status Bar (audio level only) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textSize="14sp"
        android:textColor="#00ff88"
        android:background="#2d2d44"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Live Transcription Box (partial results) -->
    <TextView
        android:id="@+id/liveText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for speech..."
        android:textSize="18sp"
        android:textColor="#ffcc00"
        android:background="#2a2a3e"
        android:padding="16dp"
        android:gravity="center"
        android:minHeight="60dp"
        android:layout_marginBottom="12dp" />

    <!-- Transcript Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRANSCRIPT"
        android:textSize="12sp"
        android:textColor="#888888"
        android:letterSpacing="0.1"
        android:paddingBottom="4dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0f0f1a"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/transcriptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for speech..."
            android:textSize="18sp"
            android:textColor="#e0e0e0"
            android:lineSpacingMultiplier="1.3"
            android:fontFamily="monospace" />

    </ScrollView>

    <!-- Debug Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEBUG LOG"
        android:textSize="12sp"
        android:textColor="#888888"
        android:letterSpacing="0.1"
        android:paddingBottom="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#0a0a12"
        android:padding="8dp">

        <TextView
            android:id="@+id/debugText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting up..."
            android:textSize="11sp"
            android:textColor="#66ff66"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.2" />

    </ScrollView>

</LinearLayout>
